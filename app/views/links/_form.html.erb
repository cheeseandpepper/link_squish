<%= form_with model: @link do |form| %>
  <p>
    <%= form.label :source_url %>
    <%= form.text_field :source_url, id: "link_source_url-#{@link.id}" %>
  </p>
  <p>
    <%= form.label :active %>
    <%= form.check_box :active, id: "link_active-#{@link.id}" %>
  </p>
  <p>
    <%= form.label :short_url %>
    <%= form.text_field :short_url, id: "link_short_url-#{@link.id}", disabled: true %>
  </p>
  <p>
    <%= form.label :short_code %>
    <%= form.text_field :short_code, id: "link_short_code-#{@link.id}", disabled: true %>
  </p>
  <p>
    <%= form.label :hits %>
    <%= form.text_field :hits, id: "link_hits-#{@link.id}", disabled: true %>
    <b>(This will update in real time)</b>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
